root = true

# ----- All files -----
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2
max_line_length = 120

# ----- Kotlin source -----
[*.kt]
indent_size = 2

# ktlint core
ktlint_code_style = android_studio
ktlint_disabled_rules = no-wildcard-imports
ij_kotlin_allow_trailing_comma = true
ij_kotlin_imports_layout = *,java.**,javax.**,kotlin.**,^

# Helpful for Compose preview/test names
ktlint_function_naming_ignore_when_annotated_with = Composable,Preview,Test,ParameterizedTest

# ----- Kotlin Gradle scripts -----
[*.gradle.kts]
indent_size = 2
ktlint_code_style = android_studio
ij_kotlin_allow_trailing_comma = true

# ----- XML (Android resources/manifests) -----
[*.xml]
indent_size = 2

# ----- Markdown / YAML / JSON -----
[*.md]
max_line_length = off   # donâ€™t hard-wrap prose

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2
